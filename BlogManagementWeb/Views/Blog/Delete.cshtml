@using Models;
@model Models.Blog

<h2>Delete Blog</h2>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="BlogTitle">Title:</label>
        <input asp-for="BlogTitle" readonly class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="BlogContent">Content:</label>
        <textarea asp-for="BlogContent" readonly class="form-control"></textarea>

    </div>
    <div class="form-group">
        <label asp-for="BlogCategory">Category:</label>
        <textarea asp-for="BlogCategory" readonly class="form-control"></textarea>

    </div>
    <div class="col-5 offset-2">
        <a asp-controller="Blog" asp-action="Index" class="btn-primary btn form-control">Back </a>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
</form>

